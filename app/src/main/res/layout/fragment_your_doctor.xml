<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/yourDoctorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".Views.Activities.YourDoctor">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/gradient_color"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleTextAppearance="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/medicinePicture"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:contentDescription=""
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:alpha="0.7"
                android:background="#000"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/medicineName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/chatWithDoctor"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:tint="@color/colorPrimaryDark"
                        app:srcCompat="@drawable/ic_chat" />

                    <ImageView
                        android:id="@+id/leaveDoctorButton"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/ic_leave_doctor" />
                </LinearLayout>
            </RelativeLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/doctorInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="6dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Contact Information"
                                android:textColor="@color/colorPrimary"
                                android:textSize="17sp"
                                android:textStyle="normal" />

                            <View
                                android:layout_width="160dp"
                                android:layout_height="0.4px"
                                android:layout_gravity="start"
                                android:layout_marginTop="5dp"
                                android:background="@color/colorPrimary" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:orientation="vertical"
                                android:paddingRight="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Contact Number"
                                    android:textSize="15sp"
                                    android:textStyle="normal" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/call"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_marginRight="10dp"
                                        app:srcCompat="@drawable/ic_call" />

                                    <TextView
                                        android:id="@+id/contactNumber"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical"
                                        android:text=""
                                        android:textColor="#C8C8C8"
                                        android:textSize="14sp"
                                        android:textStyle="normal" />
                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.4px"
                                android:layout_gravity="center"
                                android:layout_marginTop="20sp"
                                android:background="#e0e0e0" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:orientation="vertical"
                                android:paddingRight="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Email"
                                    android:textSize="15sp"
                                    android:textStyle="normal" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/sendEmail"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_marginRight="10dp"
                                        app:srcCompat="@drawable/ic_email" />

                                    <TextView
                                        android:id="@+id/email"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical"
                                        android:text=""
                                        android:textColor="#C8C8C8"
                                        android:textSize="14sp"
                                        android:textStyle="normal" />

                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.4px"
                                android:layout_gravity="center"
                                android:layout_marginTop="20sp"
                                android:background="#e0e0e0" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:orientation="vertical"
                                android:paddingRight="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Address"
                                    android:textSize="15sp"
                                    android:textStyle="normal" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_marginRight="10dp"
                                        app:srcCompat="@drawable/ic_address" />

                                    <TextView
                                        android:id="@+id/doctorAddress"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textColor="#C8C8C8"
                                        android:textSize="14sp"
                                        android:textStyle="normal" />
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="6dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="About"
                                android:textColor="@color/colorPrimary"
                                android:textSize="17sp"
                                android:textStyle="normal" />

                            <View
                                android:layout_width="45dp"
                                android:layout_height="0.4px"
                                android:layout_gravity="start"
                                android:layout_marginTop="5dp"
                                android:background="@color/colorPrimary" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:orientation="vertical"
                                android:paddingRight="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Speciality"
                                    android:textSize="15sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/specializationDP"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="#C8C8C8"
                                    android:textSize="14sp"
                                    android:textStyle="normal" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.4px"
                                android:layout_gravity="center"
                                android:layout_marginTop="20sp"
                                android:background="#e0e0e0" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:orientation="vertical"
                                android:paddingRight="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Education"
                                    android:textSize="15sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/qualificationDP"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:text=""
                                    android:textColor="#C8C8C8"
                                    android:textSize="14sp"
                                    android:textStyle="normal" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.4px"
                                android:layout_gravity="center"
                                android:layout_marginTop="20sp"
                                android:background="#e0e0e0" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical"
                                android:paddingEnd="10dp"
                                android:paddingRight="10dp"
                                tools:ignore="RtlSymmetry">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Studied From"
                                    android:textSize="15sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/educationDP"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="#C8C8C8"
                                    android:textSize="14sp"
                                    android:textStyle="normal" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.4px"
                                android:layout_gravity="center"
                                android:layout_marginTop="20sp"
                                android:background="#e0e0e0" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:orientation="vertical"
                                android:paddingRight="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Works At"
                                    android:textSize="15sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/worksAtTextViewDP"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:text=""
                                    android:textColor="#C8C8C8"
                                    android:textSize="14sp"
                                    android:textStyle="normal" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.4px"
                                android:layout_gravity="center"
                                android:layout_marginTop="20sp"
                                android:background="#e0e0e0" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:orientation="vertical"
                                android:paddingRight="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rating"
                                    android:textSize="15sp"
                                    android:textStyle="normal" />

                                <androidx.appcompat.widget.AppCompatRatingBar
                                    android:id="@+id/ratingbar"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="6dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Location"
                                android:textColor="@color/colorPrimary"
                                android:textSize="17sp"
                                android:textStyle="normal" />

                            <View
                                android:layout_width="70dp"
                                android:layout_height="0.4px"
                                android:layout_gravity="start"
                                android:layout_marginTop="5dp"
                                android:background="@color/colorPrimary" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Open location on Google Maps"
                                    android:textSize="15sp"
                                    android:textStyle="normal" />

                                <ImageView
                                    android:id="@+id/openInGoogleMaps"
                                    android:layout_width="100dp"
                                    android:layout_height="40dp"
                                    android:layout_alignParentRight="true"
                                    android:src="@drawable/google_map_icon" />

                            </RelativeLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:visibility="gone"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="6dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Availability"
                                android:textColor="@color/colorPrimary"
                                android:textSize="17sp"
                                android:textStyle="normal" />

                            <View
                                android:layout_width="75dp"
                                android:layout_height="0.4px"
                                android:layout_gravity="start"
                                android:layout_marginTop="5dp"
                                android:background="@color/colorPrimary" />

                            <RelativeLayout
                                android:id="@+id/mondayLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical"
                                android:paddingEnd="10dp"
                                android:paddingRight="10dp"
                                tools:ignore="RtlSymmetry">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Monday"
                                    android:textSize="15sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:text="5:00 - 8:00"
                                    android:textColor="#C8C8C8"
                                    android:textSize="14sp"
                                    android:textStyle="normal" />
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.4px"
                                android:layout_gravity="center"
                                android:layout_marginTop="20sp"
                                android:background="#e0e0e0" />

                            <RelativeLayout
                                android:id="@+id/tuesdayLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical"
                                android:paddingEnd="10dp"
                                android:paddingRight="10dp"
                                tools:ignore="RtlSymmetry">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tuesday"
                                    android:textSize="15sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:text="5:00 - 8:00"
                                    android:textColor="#C8C8C8"
                                    android:textSize="14sp"
                                    android:textStyle="normal" />
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.4px"
                                android:layout_gravity="center"
                                android:layout_marginTop="20sp"
                                android:background="#e0e0e0" />

                            <RelativeLayout
                                android:id="@+id/wednesdayLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical"
                                android:paddingEnd="10dp"
                                android:paddingRight="10dp"
                                tools:ignore="RtlSymmetry">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Wednesday"
                                    android:textSize="15sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:text="5:00 - 8:00"
                                    android:textColor="#C8C8C8"
                                    android:textSize="14sp"
                                    android:textStyle="normal" />
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.4px"
                                android:layout_gravity="center"
                                android:layout_marginTop="20sp"
                                android:background="#e0e0e0" />

                            <RelativeLayout
                                android:id="@+id/thursdayLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical"
                                android:paddingEnd="10dp"
                                android:paddingRight="10dp"
                                tools:ignore="RtlSymmetry">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Thursday"
                                    android:textSize="15sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:text="5:00 - 8:00"
                                    android:textColor="#C8C8C8"
                                    android:textSize="14sp"
                                    android:textStyle="normal" />
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.4px"
                                android:layout_gravity="center"
                                android:layout_marginTop="20sp"
                                android:background="#e0e0e0" />

                            <RelativeLayout
                                android:id="@+id/fridayLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical"
                                android:paddingEnd="10dp"
                                android:paddingRight="10dp"
                                tools:ignore="RtlSymmetry">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Friday"
                                    android:textSize="15sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:text="5:00 - 8:00"
                                    android:textColor="#C8C8C8"
                                    android:textSize="14sp"
                                    android:textStyle="normal" />
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.4px"
                                android:layout_gravity="center"
                                android:layout_marginTop="20sp"
                                android:background="#e0e0e0" />

                            <RelativeLayout
                                android:id="@+id/saturdayLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical"
                                android:paddingEnd="10dp"
                                android:paddingRight="10dp"
                                tools:ignore="RtlSymmetry">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Saturday"
                                    android:textSize="15sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:text="5:00 - 8:00"
                                    android:textColor="#C8C8C8"
                                    android:textSize="14sp"
                                    android:textStyle="normal" />
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.4px"
                                android:layout_gravity="center"
                                android:layout_marginTop="20sp"
                                android:background="#e0e0e0" />

                            <RelativeLayout
                                android:id="@+id/sundayLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical"
                                android:paddingEnd="10dp"
                                android:paddingRight="10dp"
                                tools:ignore="RtlSymmetry">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Sunday"
                                    android:textSize="15sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:text="5:00 - 8:00"
                                    android:textColor="#C8C8C8"
                                    android:textSize="14sp"
                                    android:textStyle="normal" />
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.4px"
                                android:layout_gravity="center"
                                android:layout_marginTop="20sp"
                                android:background="#e0e0e0" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>