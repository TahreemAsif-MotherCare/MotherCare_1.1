<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/senderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chatUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="start"
            android:text="@string/app_name"
            android:textAlignment="viewStart"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/chatMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/textview_circle"
            android:gravity="start"
            android:padding="10dp"
            android:text="@string/app_name"
            android:textAlignment="viewStart"
            android:textColor="#424242"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/recieverLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chatUserReciever"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/chatMessageReciever"
            android:layout_alignLeft="@id/chatMessageReciever"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:text="@string/app_name"
            android:textColor="#424242"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/chatMessageReciever"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chatUserReciever"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/textview_circle_sender"
            android:gravity="end"
            android:padding="10dp"
            android:text="@string/app_name"
            android:textAlignment="viewEnd"
            android:textColor="#fff" />
    </RelativeLayout>

</LinearLayout>