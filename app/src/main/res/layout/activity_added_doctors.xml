<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    tools:context=".Views.Activities.AppointmentActivity">

    <TextView
        android:id="@+id/addedDoctorsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Added Doctors"
        android:textColor="#000080 "
        android:textSize="22sp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/addedDoctorsRecylerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addedDoctorsTextView"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="26pt"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/noDoctorsAdded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addedDoctorsTextView"
        android:layout_margin="20dp"
        android:text="No Doctors Added! "
        android:textSize="15sp"
        android:visibility="gone" />

</RelativeLayout>