<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="30dp">

    <ImageView
        android:id="@+id/medicinePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_upload_pic" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <EditText
                android:id="@+id/medicineName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/edittext_shape"
                android:hint="Medicine Name"
                android:inputType="text"
                android:padding="10dp"
                android:singleLine="false"
                android:textSize="@dimen/input_font_size"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/medicinePower"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/edittext_shape"
                android:hint="Medicine Dose (e.g. 200mg)"
                android:inputType="text"
                android:padding="10dp"
                android:singleLine="false"
                android:textSize="@dimen/input_font_size"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/medicineQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/edittext_shape"
                android:hint="Available quantity in stock"
                android:inputType="number"
                android:padding="10dp"
                android:singleLine="false"
                android:textSize="@dimen/input_font_size"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/medicinePrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/edittext_shape"
                android:hint="Price"
                android:inputType="number"
                android:padding="10dp"
                android:singleLine="false"
                android:textSize="@dimen/input_font_size"
                tools:ignore="Autofill" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>